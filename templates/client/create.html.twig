{# create.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}
	Créer -
	{{ parent() }}
{% endblock %}

{% block body %}
	<div class="container mx-auto p-4">
		<h1 class="text-2xl font-bold mb-4">Créer un Client</h1>
		<div class="bg-white p-6 rounded-lg shadow-md w-full max-w-md mx-auto">
			{{ form_start(form, {'attr': {'class': 'space-y-4'}}) }}

			<div>
				{{ form_label(form.firstname, 'Prénom', {'label_attr': {'class': 'block text-gray-700 font-bold'}}) }}
				{{ form_widget(form.firstname, {'attr': {'class': 'w-full p-2 border rounded'}}) }}
				{{ form_errors(form.firstname) }}
			</div>

			<div>
				{{ form_label(form.lastname, 'Nom', {'label_attr': {'class': 'block text-gray-700 font-bold'}}) }}
				{{ form_widget(form.lastname, {'attr': {'class': 'w-full p-2 border rounded'}}) }}
				{{ form_errors(form.lastname) }}
			</div>

			<div>
				{{ form_label(form.email, 'Email', {'label_attr': {'class': 'block text-gray-700 font-bold'}}) }}
				{{ form_widget(form.email, {'attr': {'class': 'w-full p-2 border rounded'}}) }}
				{{ form_errors(form.email) }}
			</div>

			<div>
				{{ form_label(form.phoneNumber, 'Téléphone', {'label_attr': {'class': 'block text-gray-700 font-bold'}}) }}
				{{ form_widget(form.phoneNumber, {'attr': {'class': 'w-full p-2 border rounded'}}) }}
				{{ form_errors(form.phoneNumber) }}
			</div>

			<div>
				{{ form_label(form.address, 'Adresse', {'label_attr': {'class': 'block text-gray-700 font-bold'}}) }}
				{{ form_widget(form.address, {'attr': {'class': 'w-full p-2 border rounded'}}) }}
				{{ form_errors(form.address) }}
			</div>

			<button type="submit" class="w-full bg-green-500 text-white px-4 py-2 rounded hover:bg-green-600 transition">Créer</button>

			{{ form_end(form) }}
		</div>
		<div class="mt-4">
			<a href="{{ path('app_client') }}" class="bg-gray-500 text-white px-4 py-2 rounded">Retour</a>
		</div>
	</div>
{% endblock %}
