{# create.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}
	Créer -
	{{ parent() }}
{% endblock %}

{% block body %}
	<div class="container mx-auto p-4">
		<h1 class="text-2xl font-bold mb-4">Créer un produit</h1>
		<div class="bg-white p-6 rounded-lg shadow-md w-full max-w-md mx-auto">
			{{ form_start(form, {'attr': {'class': 'space-y-4'}}) }}

			<div>
				{{ form_label(form.name, 'Nom du produit', {'label_attr': {'class': 'block text-gray-700 font-bold'}}) }}
				{{ form_widget(form.name, {'attr': {'class': 'w-full p-2 border rounded'}}) }}
				{{ form_errors(form.name) }}
			</div>

			<div>
				{{ form_label(form.description, 'Description', {'label_attr': {'class': 'block text-gray-700 font-bold'}}) }}
				{{ form_widget(form.description, {'attr': {'class': 'w-full p-2 border rounded'}}) }}
				{{ form_errors(form.description) }}
			</div>

			<div>
				{{ form_label(form.price, 'Prix', {'label_attr': {'class': 'block text-gray-700 font-bold'}}) }}
				{{ form_widget(form.price, {'attr': {'class': 'w-full p-2 border rounded'}}) }}
				{{ form_errors(form.price) }}
			</div>

			<button type="submit" class="w-full bg-green-500 text-white px-4 py-2 rounded hover:bg-green-600 transition">Créer</button>

			{{ form_end(form) }}
		</div>
		<div class="mt-4">
			<a href="{{ path('app_product') }}" class="bg-gray-500 text-white px-4 py-2 rounded">Retour</a>
		</div>
	</div>
{% endblock %}
